<div class="bg-[#c4c4c433] ">
<section class=" pt-6 md:pt-20 pb-12 bg-red-500 clip grid items-start grid-cols-1 mx-auto md:grid-cols-2 md:max-w-3xl lg:max-w-4xl xl:max-w-6xld">
    
  <div class="relative md:hidden mb-7">
    {% if section.settings.title != blank %}
      <h2 class="pl-1 pr-1 text-[26px] font-bold uppercase text-center text-white sm:text-[35px] md:leading-10 leading-9">{{ section.settings.title }}</h2>
    {% endif %}
  </div>
        <div class="flex items-center justify-center relative flex-col">
            <div class="relative md:hidden">
                {% if section.settings.image != blank %}
                {% include 'responsive-image-mobile' with
                    image: section.settings.image,
                    image_class: "img",
                    max_width: 703,
                    max_height: 713
                %}
                {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
            </div>
            <div class="flex flex-col md:hidden mt-5">

              <div class="relative mx-6 flex flex-row items-center justify-center pb-6 h-16">
                <a class="text-[22px] justify-center text-black flex w-[18rem] items-center py-3 px-12 rounded-rounded-3 font-bold bg-green-500 uppercase" href="#some_id">
                  Order now <svg class="ml-3" width="19" height="19" viewBox="0 0 19 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M19 9.49622L0 0L3.18788 9.49622L0 19L19 9.49622Z" fill="black"/>
                    </svg>
                </a>
              </div>
            </div>
            <div class="relative hidden md:block">
              {% if section.settings.image != blank %}
              {% include 'responsive-image' with
                  image: section.settings.image,
                  image_class: "img",
                  max_width: 703,
                  max_height: 713
              %}
              {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
          </div>
      </div>
  
    <div class="pl-2 relative hidden md:block mb-9">
      {% if section.settings.title != blank %}
        <h2 class=" mx-7 lg:font-extrabold mb-9 font-bold uppercase text-white text-left md:text-[35px] text-[26px] md:leading-10 leading-9">{{ section.settings.title }}</h2>
      {% endif %}
      <div class="flex flex-col">
      <div class="relative max-6 flex justify-center items-center mx-6">
        <a class="w-full text-[22px] justify-center text-white flex max-w-[43rem] items-center py-4 whitespace-nowrap px-12 rounded-rounded-3 font-bold bg-green-500 uppercase" href="#some_id">
          Order now <svg class="ml-3" width="19" height="19" viewBox="0 0 19 19" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M19 9.49622L0 0L3.18788 9.49622L0 19L19 9.49622Z" fill="white"/>
            </svg>
        </a>
      </div>
      
    </div>
    </div>
    <div class="flex justify-center mt-2 mb-6">
      {% if section.settings.image_payments != blank %}
                {% include 'responsive-image-mobile' with
                    image: section.settings.image_payments,
                    image_class: "img",
                    max_width: 223,
                    max_height: 30
                %}
                {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
    </div>

  </section>
</div>

  {% schema %}
  {
    "name": "Hero Image",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "image_picker",
        "id": "image_payments",
        "label": "Image with Payment methods"
      },
      {
        "type": "textarea",
        "id": "title",
        "label": "Heading",
        "default": "Heading"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      }
    ],
    "presets": [
      {
        "name": "Hero Image",
        "category": "Image"
      }
    ]
  }
{% endschema %}
